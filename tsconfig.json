{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "allowJs": true,

        "paths": {
            "@/*": [
                // / to begin with.
                "src/*"
            ]
        },
        "types": ["vite/client", "leaflet", "geojson"]
    },
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    // "references": [{ "path": "./tsconfig.node.json" }]
    "noImplicitAny": false,
    "typeRoots": [
        "./typings",
        "./node_modules/mangopay-cardregistration-js-kit"
    ]
}
